@model Пицца_Офис.Models.ViewModels.PizzaDTOViewModel

<form asp-action="Delete" style="width:70%">
    <input asp-for="PizzaDTO.Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Удалить ?</h1>
        <hr />

        <div class="row">
          
            <div class="col-10 pb-3">
                <label asp-for="PizzaDTO.Name" class="control-label pt-2" style="font-size:20px;">Название Пиццы</label>
                <input asp-for="PizzaDTO.Name" disabled class="form-control" />
            </div>
            <div class="col-10 pb-3">
                <label asp-for="PizzaDTO.Price" class="control-label pt-2" style="font-size:20px;">Название Пиццы</label>
                <input asp-for="PizzaDTO.Price" disabled class="form-control" />
            </div>

            <div class="mb-3 col-8">
            <label asp-for="PizzaDTO.SizePizzaId"></label>
                <select asp-for="PizzaDTO.SizePizzaId" asp-items="@Model.SizeSelectList" disabled class="form-select">
            </select>
            <span asp-validation-for="PizzaDTO.SizePizzaId" class="text-danger"></span>
            </div>
            <div class="mb-3 col-8">
                <label asp-for="PizzaDTO.CategoryPizzaId"></label>
                    <select asp-for="PizzaDTO.CategoryPizzaId" asp-items="@Model.CategorySelectList" disabled class="form-select">
                </select>
                <span asp-validation-for="PizzaDTO.CategoryPizzaId" class="text-danger"></span>
            </div>

            <div class="row col-8">
                <div class="col-5">
                    <a asp-action="Index" asp-controller="Pizza" class="btn-primary btn form-control ">Назад</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Удалить" class="btn btn-danger form-control" />
                </div>
            </div>
            
        </div>
    </div>
</form>

