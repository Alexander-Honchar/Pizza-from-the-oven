@model IEnumerable<Пицца_Офис.Models.DTO.PizzaDTO>



<div class="container p-3 ">
            
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Пицца</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Pizza" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle" style="color:green"></i> &nbsp; Добавить Пиццу
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped text-break" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Название Пиццы</th>
                <th>Цена Пиццы</th>
                <th>Размер Пиццы</th>
                <th>Категория Пиццы</th>
                <th></th>
                @*<th></th>*@
            </tr>
        </thead>
        @if (Model!=null)
        {
            <tbody>

                @foreach (var item in Model)
                {

                    <tr class="text-center">
                        <td width="25%">&nbsp;&nbsp;@item.Name</td>
                        <td width="10%">&nbsp;&nbsp;@item.Price</td>
                        <td width="20%">&nbsp;&nbsp;@item.SizePizza.Size</td>
                        <td width="20%">&nbsp;&nbsp;@item.CategoryPizza.Name</td>
                        <td class="text-end" @*style="width:20%"*@>

                            <a asp-controller="Pizza" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success mx-1"><i class="bi bi-pencil-square" style="color:goldenrod"></i>&nbsp;Обновить</a>


                            <a asp-controller="Pizza" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1"><i class="bi bi-trash3-fill" style="color:red"></i>&nbsp;Удалить</a>

                        </td>
                    </tr>

                }
            </tbody>
        }
        

    </table>
</div>
