@model IEnumerable<Пицца_Офис.Models.DTO.SizePizzaDTO>


<div class="row">
    <div class ="col-md-1">  </div>
    <div class="col-md-10">
        <div class="container p-3 ">
            @*<input asp-for="Id" hidden />*@
            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-primary">Диаметр Пиццы</h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="SizePizza" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> &nbsp; Добавить Размер
                    </a>
                </div>
            </div>
            <br /><br />

            <table class="table table-bordered table-striped text-break" >
                <thead>
                    <tr>
                        <th>Диаметр Пиццы</th>

                        @*<th></th>*@
                    </tr>
                </thead>
                @if (Model!=null)
                {
                    <tbody>

                        @foreach (var item in Model)
                        {

                            <tr style="border:1px solid #008cba; border-radius: 5px;">
                                <td>&nbsp;&nbsp;@item.Size</td>

                                <td class="text-end">

                                    <a asp-controller="SizePizza" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success mx-1"><i class="bi bi-pencil-square" style="color:goldenrod"></i>&nbsp;Обновить</a>


                                    <a asp-controller="SizePizza" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1"><i class="bi bi-trash3-fill" style="color:red"></i>&nbsp;Удалить</a>

                                </td>
                            </tr>

                        }
                    </tbody>
                }
                

            </table>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>


