@model Пицца_Офис.Models.DTO.SizePizzaDTO

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit" >
	<input asp-for="Id" hidden />
	
	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
					<hr />
				</div>
				
				<div class="mb-3">
					<label asp-for="Size"></label>
					<input asp-for="Size" class="form-control" />
					<span asp-validation-for="Size" class="text-danger"></span>
				</div>


				<div class="col-12">
					<button type="submit" class="btn btn-primary" style="width:150px">Обновить</button>

					<a asp-controller="SizePizza" asp-action="Index" class="btn btn-secondary" style="width:150px">
						Назад
					</a>
				</div>
			</div>
		</div>
		
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}

}