@model Пицца_Офис.Models.DTO.CategoryPizzaDTO

<form asp-action="Delete" style="width:70%">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Удалить ?</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;">Категория Пиццы</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />

            </div>


            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="SizePizza" class="btn-primary btn form-control ">Назад</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Удалить" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
