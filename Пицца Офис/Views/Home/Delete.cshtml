@model Пицца_Офис.Models.ViewModels.OrderViewModels


<div style="height:80px">

</div>


<div class="container">
	<div class="card col-8">
		<div class="card-header bg-dark text-light ml-0 text-center">
			<div class="row">
				<div class="col-6  pt-2">
					<h3>Заказ  № <span style="color:brown">@Model.OrderHeader.NumberOrder</span> </h3>
				</div>
				
			</div>
		</div>

		<div class="card-body" style="background-color:bisque; color:black;">
			@foreach (var item in Model.OrderDetailsList)
			{
				<div class="row">
					<div class="d-none d-lg-block col-sm-4 text-center py-2">
						@item.NameCategory
					</div>
					<div class="d-none d-lg-block col-sm-4 text-center py-2">
						@item.MenuName
					</div>
					<div class="d-none d-lg-block col-sm-4 text-center py-2">
						@item.Count
					</div>
				</div>
				<hr />
			}

		</div>

		<div class="card-footer" style="background-color:bisque; color:black;">
			<div class="card-footer row">
				<div class="col">
					<a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-success form-control" style="background-color:red;opacity:0.65;color:black;">Назад</a>
				</div>
				<div class="col">
					<form method="post" asp-action="Delete">
					   <input asp-for="@Model.OrderHeader.Id" hidden />
						@*<a asp-area="" asp-controller="Home" asp-action="Delete"  class="btn btn-danger form-control">Удалить</a>*@
						<input type="submit" value="Удалить" class="btn btn-danger form-control" style="background-color:forestgreen;opacity:0.65;color:black;" />
					</form>
				</div>
					
					
					
				
			</div>
		</div>
	</div>
</div>