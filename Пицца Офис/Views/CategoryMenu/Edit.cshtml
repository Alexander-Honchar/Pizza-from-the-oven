@model Пицца_Офис.Models.ViewModels.CategoryMenuDTOViewModel

@{
    ViewData["Title"] = "Edit";
}


<form method="post" asp-action="Edit" >
    <input asp-for="CategoryMenu.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Обновить Категорию</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="CategoryMenu.NameCategory"></label>
            <input asp-for="CategoryMenu.NameCategory" class=" form-control" />
            <span class="text-danger" asp-validation-for="CategoryMenu.NameCategory"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary" style="width:150px;">Обновить</button>
            <a asp-action="Index" class="btn btn-dark" style="width:150px;">Назад</a>
        </div>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}