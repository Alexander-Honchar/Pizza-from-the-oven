@model Пицца_Офис.Models.ViewModels.CategoryMenuDTOViewModel

<form asp-action="Delete" style="width:70%">
    <input asp-for="CategoryMenu.Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Удалить ?</h1>
        <hr />

        <div class="row">

            <div class="col-10 pb-3">
                <label asp-for="CategoryMenu.NameCategory" class="control-label pt-2" style="font-size:20px;">Название Пиццы</label>
                <input asp-for="CategoryMenu.NameCategory" disabled class="form-control" />
            </div>
            <div class="row col-8">
                <div class="col-5">
                    <a asp-action="Index" asp-controller="CategoryMenu" class="btn-primary btn form-control ">Назад</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Удалить" class="btn btn-danger form-control" />
                </div>
            </div>

        </div>
    </div>
</form>