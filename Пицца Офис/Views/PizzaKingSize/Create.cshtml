@model Пицца_Офис.Models.ViewModels.PizzaKingSizeDTOViewModel

@{
    ViewData["Title"] = "Create";
}


<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="row pb-2">
        <h2 class="text-primary pl-3">Добавить Пиццу King Size</h2>
        <hr />
    </div>
    <div class="mb-3">
        <label asp-for="PizzaKingSize.Name"></label>
        <input asp-for="PizzaKingSize.Name" class=" form-control" />
        <span class="text-danger" asp-validation-for="PizzaKingSize.Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PizzaKingSize.Price"></label>
        <input asp-for="PizzaKingSize.Price" class=" form-control" />
        <span class="text-danger" asp-validation-for="PizzaKingSize.Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PizzaKingSize.Description"></label>
        <textarea asp-for="PizzaKingSize.Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="PizzaKingSize.Description"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PizzaKingSize.ImagePath"></label>
        <input type="file" name="file" class=" form-control" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary" style="width:150px;">Добавить</button>
        <a asp-action="Index" class="btn btn-dark" style="width:150px;">Назад</a>
    </div>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
