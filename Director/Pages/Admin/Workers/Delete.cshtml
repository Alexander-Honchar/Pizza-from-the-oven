@page
@model Director.Pages.Admin.Workers.DeleteModel
@{
}


<form asp-action="Delete" style="width:70%">
    <input asp-for="Worker.Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Удалить ?</h1>
        <hr />

        <div class="row">

            <div class="col-10 pb-3">
                <label asp-for="Worker.UserName" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="Worker.UserName" disabled class="form-control" />
            </div>
            <div class="col-10 pb-3">
                <label asp-for="Worker.FirstName" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="Worker.FirstName" disabled class="form-control" />
            </div>

            <div class="col-10 pb-3">
                <label asp-for="Worker.LastName" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="Worker.LastName" disabled class="form-control" />
            </div>
            <div class="col-10 pb-3">
                <label asp-for="Worker.Role" class="control-label pt-2" style="font-size:20px;"></label>
                <input asp-for="Worker.Role" disabled class="form-control" />
            </div>

            <div class="row col-8">
                <div class="col-5">
                    <a asp-page="Index" class="btn-primary btn form-control ">Назад</a>
                </div>
                <div class="col-5">
                    <input type="submit" value="Удалить" class="btn btn-danger form-control" />
                </div>
            </div>

        </div>
    </div>
</form>