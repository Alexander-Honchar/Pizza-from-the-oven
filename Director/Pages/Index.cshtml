

@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor

<div class="container" style=" height:100px">
</div>


@if (!httpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
{
    <div class="container ">
        <div class=" row">
            <div class=" col-2">
            </div>
            <div class="col-8">
                <div class="card p-2" style="border:2px solid #808080; border-radius: 10px;">
                    <div class=" card-header  text-light" style="background-color:#222222;height:80px">
                        <div class=" row text-center">
                            <h2>Приветствую</h2>
                            <hr />
                        </div>

                    </div>

                    <div class="card-body">
                        <div class=" row text-center">

                            <div class="container border p-4">

                                <div class="row">
                                    <div class="col-6 offset-3 pb-2 text-center">
                                        <h2 style="color:goldenrod">Войдите в свою учетную запись</h2>
                                        @*<h2 style="color:goldenrod">Пора работать</h2>*@
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>
                    <div class=" card-footer">
                        <div class="row text-center">
                            <div>
                                <a asp-page="/Admin/Authentication/Login" class="btn btn-primary" style="width:250px;border-radius:20px;">Войти</a>
                            </div>
                        </div>
                        <hr />
                    </div>



                </div>
            </div>
            <div class=" col-2">
            </div>
        </div>

    </div>
}
